{
    "name": "landingi/core",
    "description": "Landingi Standard Library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "nexik",
            "email": "tomek@landingi.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "doctrine/dbal": "^2.6",
        "doctrine/orm": "^2.6",
        "aws/aws-sdk-php": "^3.52",
        "monolog/monolog": "^1.23",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "phpstan/phpstan": "^0.9.1"
    },
    "autoload": {
        "psr-4": {
            "Landingi\\Shared\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Landingi\\Shared\\" : "test/",
            "Landingi\\Fake\\" : "test/Fake/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": [
            "./vendor/bin/phpstan analyse src -l 7",
            "./vendor/bin/phpunit test"
        ]
    }
}
